@using Microsoft.AspNetCore.Identity
@using WebApplication2.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="" asp-page="" title="Manage" style="white-space: nowrap; color: #ff6f00;">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link" style="color: #ff6f00;">Logout</button>
            </form>
        </li>

    }
    else
    {
        /*<li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>*/
        <li class="nav-item">
            <a class="nav-link" style=" color: #ff6f00;" id="login" asp-area="Identity" asp-page="/Account/Login">Log-in</a>
        </li>
    }
</ul>
